{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "files": {
    "include": [
      "src/**/*",
      "biome.json",
      "index.html",
      "package.json",
      "package-lock.json",
      "README.md",
      "tsconfig.json",
      "tsconfig.node.json",
      "vite.config.ts"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useComponentExportOnlyModules": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteProperties": "preserve"
    }
  }
}
